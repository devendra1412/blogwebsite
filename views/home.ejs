<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <%- include("partials/header"); -%>
    
    <h1>Home</h1>
    <p><%=Homeabout%></p>
    
    <% Content.forEach(function(post){ %>
    <h1><%= post.ttl %></h1>
    <p><%= post.txt.substring(0,100) + "..." %><a href="/posts/<%=post.ttl%>">Read more</a></p>
    <% }) %>
    <form action="/compose" >
        <button type="submit" name="bttn" class="btn btn-primary mnl">Compose</button>

    </form>
    <%- include("partials/footer"); -%>
</body>
</html>